<html>
<head>
  <meta http-equiv='content-type' content='text/html;charset=utf-8'>
  <style>
    body {
      margin: 0;
      width: 600px !important;
      background-image: url('<%="#{Rails.root}/app/assets/images/news-yeti-small.png" %>');
      background-repeat: no-repeat;
      background-position: 430px 125px;
    }
    h1 {
      font-size: 75px;
      line-height: 86px;
      margin-left: 10px;
      width: 420px;
      max-height: 315px;
      display: -webkit-box;
      -webkit-line-clamp: 3;
      -webkit-box-orient: vertical;
      position: relative;
      top: -50px;
      direction: ltr;
    }
    div#white-cover {
      position: absolute;
      top: 260px;
      width: 430px;
      height: 200px;
      background-color: #fff;
    }
  </style>
</head>
<body>
  <h1 id="title"><span><%=@news_bite.top_text%></span></h1>
  <div id="white-cover">&nbsp;</div>
  <script type="text/javascript">
    var titleElement = document.getElementById('title');
    if (/[א-ת]/.test(titleElement.innerHTML)) {
      titleElement.style.direction = 'rtl';
    }
  </script>

</body>
</html>